# Database Connection Configuration
DB_HOST=localhost
DB_PORT=8000

# Database Authentication
DB_USERNAME=root
DB_PASSWORD=root

# Database Namespace and Name
DB_NAMESPACE=slatehub
DB_NAME=main

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=3000

# Optional: Full database connection URL (alternative to individual settings)
# DATABASE_URL=ws://localhost:8000

# Logging Configuration
# Log level: trace, debug, info, warn, error
RUST_LOG=info,slatehub=debug,tower_http=debug
# Log format: json, pretty, compact (default: pretty)
LOG_FORMAT=pretty

# Email Configuration (Mailjet)
# Sign up for a free Mailjet account at https://www.mailjet.com/
# Required for email features like password reset, notifications, etc.
MAILJET_API_KEY=your_mailjet_api_key_here
MAILJET_API_SECRET=your_mailjet_api_secret_here
# Default sender email address (defaults to noreply@slatehub.com if not set)
MAILJET_FROM_EMAIL=noreply@yourdomain.com
# Default sender name (defaults to SlateHub if not set)
MAILJET_FROM_NAME=SlateHub
